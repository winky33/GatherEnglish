<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gatherenglsih">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GatherEnglsih">
        <activity
            android:name=".ResultPage"
            android:exported="true" />
        <activity
            android:name=".ListeningExercise"
            android:exported="true" />
        <activity
            android:name=".SpellingExercise"
            android:exported="true" />
        <activity
            android:name=".CardView"
            android:exported="true" />
        <activity
            android:name=".Exercises"
            android:exported="true" />
        <activity
            android:name=".CardGallery"
            android:exported="true" />
        <activity
            android:name=".GatherCard"
            android:exported="true" />
        <activity
            android:name=".Homepage"
            android:exported="true" />
        <activity
            android:name=".LaunchPage"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.gatherenglsih.fileprovider"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/fileprovider" />
        </provider>
    </application>

</manifest>